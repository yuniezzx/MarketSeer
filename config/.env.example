# MarketSeer 环境变量配置模板
# 复制此文件为 .env 并根据实际情况修改配置

# ========================================
# 基础配置
# ========================================
DEBUG=False
LOG_LEVEL=INFO

# ========================================
# 数据库配置
# ========================================
# 数据库类型: sqlite, mysql, postgresql
DB_TYPE=sqlite

# SQLite配置（默认）
SQLITE_PATH=data/marketseer.db

# MySQL配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=marketseer
DB_CHARSET=utf8mb4

# 数据库连接池配置
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=False

# ========================================
# API配置
# ========================================
# akshare请求超时时间（秒）
AKSHARE_TIMEOUT=30

# 请求间隔时间（秒），避免频率限制
REQUEST_DELAY=0.1

# ========================================
# 缓存配置
# ========================================
# 是否启用缓存
ENABLE_CACHE=True

# 缓存过期时间（小时）
CACHE_EXPIRE_HOURS=24

# ========================================
# 第三方API密钥（如需要）
# ========================================
# 示例：如果需要其他数据源的API密钥
# ALPHA_VANTAGE_API_KEY=your_api_key
# QUANDL_API_KEY=your_api_key
# TUSHARE_TOKEN=your_token

# ========================================
# 邮件通知配置（可选）
# ========================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=recipient@example.com
