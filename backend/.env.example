# ============================================================
# ENV 配置
# 配置使用 load_dotenv() 和 os.environ.get 读取,确保系统环境变量优先级 > .env 文件优先级
# ============================================================
ENV=development # development, production

# ============================================================
# Flask 配置
# ============================================================
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 定时器任务配置
SCHEDULER_API_ENABLED=True
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_JOB_DEFAULTS={"coalesce": false, "max_instances": 1}

# logging 配置
LOG_LEVEL=INFO

# ============================================================
# 数据库配置
# ============================================================

# SQLite
SQLite_DB_URI=sqlite:///./data/sqlite.db
# SUPABASE
# Replace [project-ref], [password], and [region] with actual values
# SUPABASE_URI=postgresql://postgres.abcdefghijklmnop:your_password_here@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres

# AkShare 原始数据保存配置 (可选，默认启用)
# -----------------------------------------------------------
# 文件保存位置: backend/data/akshare_raw/
# 文件命名格式: {api_name}_{symbol}_{timestamp}.json
SAVE_AKSHARE_RAW_DATA=false

# AkShare 原始数据保存保留天数 (可选，默认30天)
SAVE_AKSHARE_RAW_DATA_DAYS=30

